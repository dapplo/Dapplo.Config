<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <Description>Dapplo.Config provides an easy to use configuration class, assisted by AutoProperties.Fody</Description>
    <AssemblyTitle>Dapplo.Config</AssemblyTitle>
    <TargetFrameworks>netstandard2.0;net461</TargetFrameworks>
    <AssemblyName>Dapplo.Config</AssemblyName>
    <PackageId>Dapplo.Config</PackageId>
	<PackageTags>dapplo config</PackageTags>
	<Version>1.0.0</Version>
    <AssemblyVersion>1.0.0</AssemblyVersion>
    <FileVersion>1.0.0</FileVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Dapplo.Log" Version="1.3.11" />
    <PackageReference Include="Dapplo.Utils" Version="1.1.8" />
    <PackageReference Include="AutoProperties.Fody" Version="1.14.0">
      <PrivateAssets>all</PrivateAssets>
      <!--IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets-->
    </PackageReference>
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'net461' ">
    <Reference Include="Microsoft.CSharp" />
    <Reference Include="System" />
    <Reference Include="System.ComponentModel.DataAnnotations" />
    <Reference Include="System.Core" />
    <Reference Include="System.Runtime.Caching" />
    <Reference Include="System.Runtime.Serialization" />
  </ItemGroup>

</Project>